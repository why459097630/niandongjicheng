    "LIST:FEED_QUERY_PARAMS": { "group": "list", "type": "list<string>", "desc": "Feed 拉取的查询参数（分页/排序/过滤）", "example": ["page","pageSize","orderBy"], "rules": { "minItems": 1 } },
