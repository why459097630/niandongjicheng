    "NDJC:ENABLE_COMMENTS": { "group": "text", "type": "boolean", "desc": "是否启用评论能力", "example": true },
    "NDJC:ENABLE_LIKES": { "group": "text", "type": "boolean", "desc": "是否启用点赞能力", "example": true },
    "NDJC:PROFILE_EDIT_ENABLED": { "group": "text", "type": "boolean", "desc": "是否允许编辑个人资料", "example": true },
    "NDJC:NOTIFICATIONS_ENABLED": { "group": "text", "type": "boolean", "desc": "是否启用站内通知页面/拉取", "example": true },

