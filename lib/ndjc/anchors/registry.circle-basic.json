    "BUILD_SUMMARY",

    "HEADER_AD_SLOT",
    "FEED_ITEM_BADGES",
    "USER_PROFILE_CARD",
    "SPONSORED_CARD",

    "PROFILE_SECTION",
    "SETTINGS_SECTION"
  ],
  "list": [
    "PROGUARD_EXTRA",
    "PACKAGING_RULES",
    "ROUTES",
    "POST_FIELDS",
    "COMMENT_FIELDS",
    "ABI_SPLITS",
    "PLURAL_STRINGS",
    "COMPONENT_STYLES",
    "REMOTE_FLAGS",
    "DEEPLINK_PATTERNS",
    "SUPPORTED_LOCALES"
  ],
  "if": [
    "PERMISSION.CAMERA",
    "PERMISSION.MEDIA",
    "PERMISSION.NOTIFICATION",
    "PERMISSION.LOCATION",
    "PERMISSION.CONTACTS",
    "PERMISSION.SCHEDULE_EXACT_ALARM",
    "PERMISSION.CLIPBOARD",

    "NETWORK.CLEAR_TEXT",
    "FILE_PROVIDER",
    "INTENT.SHARE"
  ],
  "hook": [
    "BEFORE_BUILD",
    "AFTER_BUILD",
    "PRE_INJECT",
    "POST_INJECT",
    "PRE_COMMIT",
    "AFTER_INSTALL"
  ],
  "resources": [
    "RES:drawable/app_icon.png",
    "RES:drawable/empty_illustration.png",
    "RES:drawable/avatar_placeholder.png",
    "RES:drawable/brand_cover.png",
    "RES:drawable/ic_stat_notify.png",
    "RES:font/primary.ttf",
    "RES:font/secondary.ttf",
    "RES:raw/theme_colors.json",
    "RES:raw/seed_data.json"
  ],

  "required": {
    "text": [
      "NDJC:PACKAGE_NAME",
      "NDJC:APP_LABEL",
      "NDJC:HOME_TITLE",
      "NDJC:PRIMARY_BUTTON_TEXT",
      "NDJC:LOG_LEVEL",
      "NDJC:DEBUG_LOG_ENABLED"
    ],
    "block": [
      "HOME_HEADER",
      "HOME_BODY",
      "HOME_ACTIONS"
    ],
    "list": [
      "ROUTES",
      "SUPPORTED_LOCALES",
      "DEEPLINK_PATTERNS"
    ],
    "if": [
      "PERMISSION.NOTIFICATION",
      "NETWORK.CLEAR_TEXT",
      "INTENT.SHARE"
    ],
    "hook": [
      "BEFORE_BUILD",
      "AFTER_BUILD"
    ],
    "resources": [
      "RES:drawable/app_icon.png",
      "RES:font/primary.ttf",
      "RES:font/secondary.ttf",
      "RES:raw/theme_colors.json"
    ],
    "gradle": [
      "applicationId",
      "resConfigs",
      "permissions"
    ]
  },

  "defaults": {
    "text": {
      "NDJC:PACKAGE_NAME": "com.ndjc.demo.core",
      "NDJC:APP_LABEL": "NDJC App",
      "NDJC:HOME_TITLE": "Home",
      "NDJC:PRIMARY_BUTTON_TEXT": "Start",
      "NDJC:THEME_NAME": "NDJCTheme",

      "NDJC:DARK_MODE": "system",
      "NDJC:FONT_FAMILY_PRIMARY": "sans-serif",
      "NDJC:FONT_FAMILY_SECONDARY": "sans-serif-medium",
      "NDJC:I18N_ENABLED": "true",
      "NDJC:ANIM_ENABLED": "true",
      "NDJC:ANIM_DURATION_MS": "160",
      "NDJC:LAYOUT_DENSITY": "normal",

      "NDJC:DATA_SOURCE": "remote",
      "NDJC:SEED_ENABLED": "false",
      "NDJC:FEED_SORT": "latest",
      "NDJC:PAGING_SIZE": "20",
      "NDJC:OFFLINE_POLICY": "cache-first",
      "NDJC:PRIVACY_POLICY": "",
      "NDJC:DRAFT_ENABLED": "true",

      "NDJC:USE_APP_BUNDLE": "true",
      "NDJC:BUILD_META_RUNID": "",
      "NDJC:FEATURE_TOGGLE_MIN": "false",
      "NDJC:DEBUG_LOG_ENABLED": "true",

      "NDJC:RUN_ID": "",
      "NDJC:LOG_LEVEL": "INFO",
      "NDJC:METRICS_ENABLED": "true",
      "NDJC:CRASHLYTICS_ENABLED": "true",

      "NDJC:EXPERIMENT_BUCKET": "control"
    },
    "list": {
      "ROUTES": ["home"],
      "SUPPORTED_LOCALES": ["en", "zh-rCN", "zh-rTW"],
      "DEEPLINK_PATTERNS": ["https://example.com/*"],
      "PROGUARD_EXTRA": [],
      "PACKAGING_RULES": [],
      "POST_FIELDS": [],
      "COMMENT_FIELDS": [],
      "ABI_SPLITS": [],
      "PLURAL_STRINGS": [],
      "COMPONENT_STYLES": [],
      "REMOTE_FLAGS": []
    },
    "gradle": {
      "applicationId": "com.ndjc.demo.core",
      "resConfigs": ["en", "zh-rCN", "zh-rTW"],
      "permissions": []
    }
  },

  "valueSchemas": {
    "text": {
      "*": {
        "valueType": "string",
        "valueFormat": "^.{0,160}$",
        "placeholder": "__NDJC_PLACEHOLDER_TEXT__"
      },
      "NDJC:PACKAGE_NAME": {
        "valueType": "string",
        "valueFormat": "^[a-z][a-z0-9_]*(\\.[a-z][a-z0-9_]*){2,}$",
        "placeholder": "com.ndjc.demo.core",
        "examples": ["com.example.app", "com.ndjc.demo.core"]
      },
      "NDJC:APP_LABEL": {
        "valueType": "string",
        "valueFormat": "^.{1,40}$",
        "placeholder": "NDJC App",
        "examples": ["NDJC App", "咖啡记"]
      },
      "NDJC:HOME_TITLE": {
        "valueType": "string",
        "valueFormat": "^.{1,40}$",
        "placeholder": "Home"
      },
      "NDJC:PRIMARY_BUTTON_TEXT": {
        "valueType": "string",
        "valueFormat": "^.{1,24}$",
        "placeholder": "Start"
      },
      "NDJC:THEME_NAME": {
        "valueType": "string",
        "valueFormat": "^[A-Za-z][A-Za-z0-9_]{0,40}$",
        "placeholder": "NDJCTheme"
      },

      "NDJC:DARK_MODE": {
        "valueType": "enum",
        "enum": ["system","light","dark"],
        "placeholder": "system"
      },
      "NDJC:FONT_FAMILY_PRIMARY": {
        "valueType": "string",
        "valueFormat": "^.{1,80}$",
        "placeholder": "sans-serif"
      },
      "NDJC:FONT_FAMILY_SECONDARY": {
        "valueType": "string",
        "valueFormat": "^.{1,80}$",
        "placeholder": "sans-serif-medium"
      },
      "NDJC:I18N_ENABLED": {
        "valueType": "enum",
        "enum": ["true","false"],
        "placeholder": "true"
      },
      "NDJC:ANIM_ENABLED": {
        "valueType": "enum",
        "enum": ["true","false"],
        "placeholder": "true"
      },
      "NDJC:ANIM_DURATION_MS": {
        "valueType": "int",
        "min": 0,
        "max": 2000,
        "placeholder": "160"
      },
      "NDJC:LAYOUT_DENSITY": {
        "valueType": "enum",
        "enum": ["compact","normal","expanded"],
        "placeholder": "normal"
      },

      "NDJC:DATA_SOURCE": {
        "valueType": "enum",
        "enum": ["remote","local","hybrid"],
        "placeholder": "remote"
      },
      "NDJC:SEED_ENABLED": {
        "valueType": "enum",
        "enum": ["true","false"],
        "placeholder": "false"
      },
      "NDJC:FEED_SORT": {
        "valueType": "enum",
        "enum": ["latest","hot","top"],
        "placeholder": "latest"
      },
      "NDJC:PAGING_SIZE": {
        "valueType": "int",
        "min": 5,
        "max": 200,
        "placeholder": "20"
      },
      "NDJC:OFFLINE_POLICY": {
        "valueType": "enum",
        "enum": ["cache-first","network-first","always-online"],
        "placeholder": "cache-first"
      },
      "NDJC:PRIVACY_POLICY": {
        "valueType": "string",
        "valueFormat": "^.{0,2000}$",
        "placeholder": ""
      },
      "NDJC:DRAFT_ENABLED": {
        "valueType": "enum",
        "enum": ["true","false"],
        "placeholder": "true"
      },

      "NDJC:USE_APP_BUNDLE": {
        "valueType": "enum",
        "enum": ["true","false"],
        "placeholder": "true"
      },
      "NDJC:BUILD_META_RUNID": {
        "valueType": "string",
        "valueFormat": "^[A-Za-z0-9_\\-]{0,64}$",
        "placeholder": ""
      },
      "NDJC:FEATURE_TOGGLE_MIN": {
        "valueType": "enum",
        "enum": ["true","false"],
        "placeholder": "false"
      },
      "NDJC:DEBUG_LOG_ENABLED": {
        "valueType": "enum",
        "enum": ["true","false"],
        "placeholder": "true"
      },

      "NDJC:RUN_ID": {
        "valueType": "string",
        "valueFormat": "^[A-Za-z0-9_\\-]{0,64}$",
        "placeholder": ""
      },
      "NDJC:LOG_LEVEL": {
        "valueType": "enum",
        "enum": ["DEBUG","INFO","WARN","ERROR"],
        "placeholder": "INFO"
      },
      "NDJC:METRICS_ENABLED": {
        "valueType": "enum",
        "enum": ["true","false"],
        "placeholder": "true"
      },
      "NDJC:CRASHLYTICS_ENABLED": {
        "valueType": "enum",
        "enum": ["true","false"],
        "placeholder": "true"
      },

      "NDJC:EXPERIMENT_BUCKET": {
        "valueType": "string",
        "valueFormat": "^[A-Za-z0-9_\\-]{1,40}$",
        "placeholder": "control",
        "examples": ["control","variantA","variantB"]
      }
    },

    "block": {
      "*": {
        "valueType": "code",
        "languageHint": "xml|kotlin|groovy|gradle",
        "placeholder": "<!-- __NDJC_PLACEHOLDER_BLOCK__ -->",
        "examples": [
          "<TextView android:id=\"@+id/title\" .../>",
          "val title = stringResource(R.string.app_name)"
        ]
      }
    },

    "list": {
      "*": {
        "valueType": "array",
        "itemType": "string",
        "itemFormat": "^.{1,120}$",
        "placeholder": ["__NDJC_PLACEHOLDER_ITEM__"]
      },
      "SUPPORTED_LOCALES": {
        "valueType": "array",
        "itemType": "string",
        "itemFormat": "^[a-z]{2}(-r[A-Z]{2})?$",
        "placeholder": ["en","zh-rCN","zh-rTW"]
      },
      "DEEPLINK_PATTERNS": {
        "valueType": "array",
        "itemType": "string",
        "itemFormat": "^(https?|ndjc)://.+$",
        "placeholder": ["https://example.com/*"]
      }
    },

    "if": {
      "*": {
        "valueType": "boolean",
        "placeholder": false
      }
    },

    "hook": {
      "*": {
        "valueType": "code",
        "languageHint": "kotlin|groovy|gradle|bash",
        "placeholder": "// __NDJC_PLACEHOLDER_HOOK__",
        "examples": [
          "dependencies { implementation(\"com.squareup.okhttp3:okhttp:4.12.0\") }",
          "println(\"after build\")"
        ]
      }
    },

    "resources": {
      "RES:drawable/app_icon.png": {
        "valueType": "file",
        "mime": "image/png",
        "placeholder": "drawable/app_icon.png"
      },
      "RES:drawable/empty_illustration.png": {
        "valueType": "file",
        "mime": "image/png",
        "placeholder": "drawable/empty_illustration.png"
      },
      "RES:drawable/avatar_placeholder.png": {
        "valueType": "file",
        "mime": "image/png",
        "placeholder": "drawable/avatar_placeholder.png"
      },
      "RES:drawable/brand_cover.png": {
        "valueType": "file",
        "mime": "image/png",
        "placeholder": "drawable/brand_cover.png"
      },
      "RES:drawable/ic_stat_notify.png": {
        "valueType": "file",
        "mime": "image/png",
        "placeholder": "drawable/ic_stat_notify.png"
      },
      "RES:font/primary.ttf": {
        "valueType": "file",
        "mime": "font/ttf",
        "placeholder": "font/primary.ttf"
      },
      "RES:font/secondary.ttf": {
        "valueType": "file",
        "mime": "font/ttf",
        "placeholder": "font/secondary.ttf"
      },
      "RES:raw/theme_colors.json": {
        "valueType": "file",
        "mime": "application/json",
        "placeholder": "raw/theme_colors.json"
      },
      "RES:raw/seed_data.json": {
        "valueType": "file",
        "mime": "application/json",
        "placeholder": "raw/seed_data.json"
      }
    }
  }
}
