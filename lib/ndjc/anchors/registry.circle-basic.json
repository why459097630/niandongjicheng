    "NDJC:ANIM_ENABLED",
    "NDJC:ANIM_DURATION_MS",
    "NDJC:LAYOUT_DENSITY",

    "NDJC:DATA_SOURCE",
    "NDJC:SEED_ENABLED",
    "NDJC:FEED_SORT",
    "NDJC:PAGING_SIZE",
    "NDJC:OFFLINE_POLICY",
    "NDJC:PRIVACY_POLICY",
