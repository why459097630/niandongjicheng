    "NDJC:RUN_ID",
    "NDJC:LOG_LEVEL",
    "NDJC:METRICS_ENABLED",
    "NDJC:CRASHLYTICS_ENABLED",
    "NDJC:EXPERIMENT_BUCKET"
  ],

  "block": [
    "HOME_HEADER",
    "HOME_BODY",
    "HOME_ACTIONS",
    "THEME_COLORS",
    "TYPOCASE_OVERRIDES",
    "STRINGS_EXTRA",
    "ROUTE_HOME",
    "ROUTE_DETAIL",
    "ROUTE_POST",
    "NAV_TRANSITIONS",
    "SPLASH_CONTENT",
    "EMPTY_STATE",
    "ERROR_STATE",
    "DEPENDENCY_SNIPPETS",
    "DEBUG_PANEL",
    "BUILD_SUMMARY",
    "HEADER_AD_SLOT",
    "FEED_ITEM_BADGES",
    "USER_PROFILE_CARD",
    "SPONSORED_CARD",
    "PROFILE_SECTION",
    "SETTINGS_SECTION"
  ],

  "list": [
    "PROGUARD_EXTRA",
    "PACKAGING_RULES",
    "ROUTES",
    "POST_FIELDS",
    "COMMENT_FIELDS",
    "ABI_SPLITS",
    "PLURAL_STRINGS",
    "COMPONENT_STYLES",
    "REMOTE_FLAGS",
    "DEEPLINK_PATTERNS"
  ],

  "if": [
    "PERMISSION.CAMERA",
    "PERMISSION.MEDIA",
    "PERMISSION.NOTIFICATION",
    "PERMISSION.LOCATION",
    "PERMISSION.CONTACTS",
    "PERMISSION.SCHEDULE_EXACT_ALARM",
    "PERMISSION.CLIPBOARD",
    "NETWORK.CLEAR_TEXT",
    "FILE_PROVIDER",
    "INTENT.SHARE"
  ],

  "hook": [
    "BEFORE_BUILD",
    "AFTER_BUILD",
    "PRE_INJECT",
    "POST_INJECT",
    "PRE_COMMIT",
    "AFTER_INSTALL"
  ],

  "resources": [
    "RES:drawable/app_icon.png",
    "RES:drawable/empty_illustration.png",
    "RES:drawable/avatar_placeholder.png",
    "RES:drawable/brand_cover.png",
    "RES:drawable/ic_stat_notify.png",
    "RES:font/primary.ttf",
    "RES:font/secondary.ttf",
    "RES:raw/theme_colors.json",
    "RES:raw/seed_data.json"
  ],

  "aliases": {
    "TEXT:NDJC:PACKAGE_NAME": "NDJC:PACKAGE_NAME",
    "BLOCK:HOME_BODY": "HOME_BODY",
    "LIST:ROUTES": "ROUTES"
  },

  "required": {
    "text": [
      "NDJC:PACKAGE_NAME",
      "NDJC:APP_LABEL",
      "NDJC:HOME_TITLE",
      "NDJC:PRIMARY_BUTTON_TEXT"
    ],
    "block": [
      "HOME_BODY"
    ],
    "list": [
      "ROUTES"
    ],
    "gradle": [
      "applicationId",
      "resConfigs",
      "permissions"
    ]
  },

  "defaults": {
    "text": {
      "NDJC:APP_LABEL": "NDJC App",
      "NDJC:HOME_TITLE": "NDJC Home",
      "NDJC:PRIMARY_BUTTON_TEXT": "Create",
      "NDJC:THEME_NAME": "Material3",
      "NDJC:DARK_MODE": "auto",
      "NDJC:I18N_ENABLED": "true",
      "NDJC:ANIM_ENABLED": "true",
      "NDJC:ANIM_DURATION_MS": "200",
      "NDJC:PAGING_SIZE": "20",
      "NDJC:DEBUG_LOG_ENABLED": "false",
      "NDJC:LOG_LEVEL": "INFO"
    },
    "list": {
      "ROUTES": ["home"]
    },
    "gradle": {
      "applicationId": "com.ndjc.demo.core",
      "resConfigs": ["en", "zh-rCN", "zh-rTW"],
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ]
    }
  },

  "placeholders": {
    "text": {},
    "block": {},
    "list": {},
    "if": {},
    "hook": {},
    "resources": {},
    "gradle": {}
  },

  "valueFormat": {
    "text": {
      "NDJC:PACKAGE_NAME": { "regex": "^[a-z][a-z0-9_]*(\\.[a-z][a-z0-9_]*)+$" }
    },
    "block": {
      "*": {
        "minLen": 30,
        "mustContainAny": ["@Composable", "fun ", "LazyColumn", "Modifier\\."],
        "denyPatterns": ["^__.*__$", "\\{\\{.*\\}\\}", "(?i)placeholder|todo|sample|example|模板|样例"]
      }
    },
    "list": {
      "*": {
        "minItems": 1,
        "itemMinLen": 2,
        "denyPatterns": ["^__.*__$", "\\{\\{.*\\}\\}", "(?i)placeholder|todo|sample|example|模板|样例"]
      },
      "ROUTES": {
        "itemRegex": "^[a-z][a-z0-9_-]*$"
      }
    },
    "if": {},
    "hook": {
      "*": {
        "minLen": 10,
        "denyPatterns": ["^__.*__$", "\\{\\{.*\\}\\}", "(?i)placeholder|todo|sample|example|模板|样例"]
      }
    },
    "resources": {},
    "gradle": {
      "applicationId": { "regex": "^[a-z][a-z0-9_]*(\\.[a-z][a-z0-9_]*)+$" },
      "resConfigs": { "itemRegex": "^[a-z]{2}(-r[A-Z]{2})?$" },
      "permissions": {
        "allowList": [
          "android.permission.INTERNET",
          "android.permission.ACCESS_NETWORK_STATE",
          "android.permission.READ_MEDIA_IMAGES",
          "android.permission.READ_MEDIA_VIDEO",
          "android.permission.READ_MEDIA_AUDIO",
          "android.permission.POST_NOTIFICATIONS",
          "android.permission.CAMERA",
          "android.permission.ACCESS_FINE_LOCATION"
        ]
      }
    }
  }
}
