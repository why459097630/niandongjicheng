    "text": {
      "NDJC:PACKAGE_NAME": { "regex": "^[a-z][a-z0-9_]*(\\.[a-z][a-z0-9_]*)+$" },
      "NDJC:APP_LABEL": { "minLen": 1, "maxLen": 64 },
      "NDJC:HOME_TITLE": { "minLen": 1, "maxLen": 64 },
      "NDJC:PRIMARY_BUTTON_TEXT": { "minLen": 1, "maxLen": 64 },
      "NDJC:ANIM_DURATION_MS": { "regex": "^[0-9]{1,5}$" },
      "NDJC:PAGING_SIZE": { "regex": "^[0-9]{1,3}$" },
      "NDJC:LOG_LEVEL": { "enum": ["trace", "debug", "info", "warn", "error"] }
    },
    "block": {
      "BLOCK:THEME_COLORS": { "maxLen": 20000 }
    },
    "list": {
      "LIST:ROUTES": { "itemRegex": "^[a-z0-9_\\-/{}}]{1,64}$", "minItems": 1, "maxItems": 64 },
      "LIST:DEEPLINK_PATTERNS": { "itemRegex": "^[a-z0-9_\\-/{\\.:}]+$", "maxItems": 64 }
    },
    "if": {},
    "hook": {},
    "resources": {},
    "gradle": {
      "applicationId": { "regex": "^[a-z][a-z0-9_]*(\\.[a-z][a-z0-9_]*)+$" },
      "resConfigs": { "itemRegex": "^[a-z]{2}(-r[A-Z]{2})?$" },
      "permissions": { "itemRegex": "^android\\.permission\\.[A-Z_]+$" }
