{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ndjc-android-contract-v1.schema.json",
  "title": "NDJC Android Contract v1",
  "type": "object",
  "required": ["metadata", "patches", "files", "anchors"],
  "additionalProperties": false,

  "properties": {
    "metadata": {
      "type": "object",
      "required": ["mode", "template", "appName", "packageId", "locales"],
      "additionalProperties": true,
      "properties": {
        "runId": { "type": ["string", "null"] },
        "mode": { "type": "string", "enum": ["A", "B"] },
        "template": { "type": "string" },
        "appName": { "type": "string" },
        "packageId": { "type": "string" },
        "locales": { "type": "array", "items": { "type": "string" } },
        "summary": { "type": ["string", "null"] },
        "constraints": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "maxFiles": { "type": "integer", "minimum": 0 },
            "maxFileKB": { "type": "integer", "minimum": 1 },
            "allowNetwork": { "type": "boolean" }
          }
        },
        "meta": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "entry_activity": { "type": "string" }
          }
        }
      }
    },

    "patches": {
      "type": "object",
      "required": ["gradle", "manifest"],
      "additionalProperties": false,
      "properties": {
        "gradle": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "compileSdk": { "type": ["integer", "null"] },
            "minSdk": { "type": ["integer", "null"] },
            "targetSdk": { "type": ["integer", "null"] },
            "resConfigs": {
              "type": ["array", "null"],
              "items": { "type": "string" }
            },
            "proguardExtra": {
              "type": ["array", "null"],
              "items": { "type": "string" }
            },
            "dependencies": {
              "type": ["array", "null"],
              "items": {
                "type": "object",
                "required": ["group", "name", "scope"],
                "additionalProperties": false,
                "properties": {
                  "group": { "type": "string" },
                  "name": { "type": "string" },
                  "version": { "type": ["string", "null"] },
                  "scope": { "type": "string" }
                }
              }
            }
          }
        },
        "manifest": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "permissions": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    },

    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "kind", "content"],
        "additionalProperties": false,
        "properties": {
          "path": { "type": "string", "minLength": 1 },
          "kind": {
            "type": "string",
            "enum": ["source", "values", "drawable", "raw", "manifest_patch"]
          },
          "encoding": { "type": "string", "enum": ["utf8", "base64"], "default": "utf8" },
          "content": { "type": "string" },
          "overwrite": { "type": ["boolean", "null"] }
        }
      }
    },

    "anchors": {
      "type": "object",
      "required": ["text", "block", "list", "if", "gradle"],
      "additionalProperties": false,
      "properties": {
        "text": {
          "type": "object",
          "minProperties": 0,
          "additionalProperties": { "type": "string" }
        },
        "block": {
          "type": "object",
          "minProperties": 0,
          "additionalProperties": { "type": "string" }
        },
        "list": {
          "type": "object",
          "minProperties": 0,
          "additionalProperties": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "if": {
          "type": "object",
          "minProperties": 0,
          "additionalProperties": { "type": "boolean" }
        },
        "gradle": {
          "type": "object",
          "required": ["applicationId"],
          "additionalProperties": true,
          "properties": {
            "applicationId": { "type": "string" },
            "resConfigs": {
              "type": ["array", "null"],
              "items": { "type": "string" }
            },
            "permissions": {
              "type": ["array", "null"],
              "items": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
