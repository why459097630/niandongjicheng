{
  "$schema": "https://json.schemastore.org/json",
  "presets": {
    "contract_v1": {
      "id": "contract_v1",
      "title": "NDJC Android Contract v1",
      "description": "单一 JSON 输出协议（Kotlin + Jetpack Compose，禁止 XML），用于所有模板的通用预设。",
      "version": "1.0.0",
      "system": "config/llm/system-prompts/ndjc-android-contract-v1.md",
      "developer": "config/llm/developer-prompts/ndjc-android-contract-v1.md",
      "defaults": {
        "template": "circle-basic",
        "mode": "B",
        "locales": ["en"],
        "constraints": { "maxFiles": 50, "maxFileKB": 300, "allowNetwork": false },
        "meta": {
          "entry_activity": "{PACKAGE_ID}.MainActivity"
        }
      }
    },

    "contract_v1_circle": {
      "id": "contract_v1_circle",
      "title": "NDJC Contract v1 · circle-basic",
      "description": "面向 circle-basic 模板的便捷预设。",
      "version": "1.0.0",
      "system": "config/llm/system-prompts/ndjc-android-contract-v1.md",
      "developer": "config/llm/developer-prompts/ndjc-android-contract-v1.md",
      "defaults": {
        "template": "circle-basic",
        "mode": "B",
        "locales": ["en"],
        "constraints": { "maxFiles": 20, "maxFileKB": 200, "allowNetwork": false },
        "meta": {
          "entry_activity": "{PACKAGE_ID}.MainActivity"
        }
      }
    },

    "contract_v1_A_only": {
      "id": "contract_v1_A_only",
      "title": "NDJC Contract v1 · 抽字段模式 (A)",
      "description": "仅锚点/补丁，不落地 files。",
      "version": "1.0.0",
      "system": "config/llm/system-prompts/ndjc-android-contract-v1.md",
      "developer": "config/llm/developer-prompts/ndjc-android-contract-v1.md",
      "defaults": {
        "template": "circle-basic",
        "mode": "A",
        "locales": ["en"],
        "constraints": { "maxFiles": 0, "maxFileKB": 300, "allowNetwork": false },
        "meta": {
          "entry_activity": "{PACKAGE_ID}.MainActivity"
        }
      }
    }
  }
}
