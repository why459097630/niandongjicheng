<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- 标题：用 ndjc_home_title（生成器会替换） -->
    <TextView
        android:id="@+id/ndjcTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ndjc_home_title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingBottom="12dp" />

    <!-- 正文：也可以用 ndjc_home_body（可选，没有就沿用同一个） -->
    <TextView
        android:id="@+id/ndjcBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ndjc_home_title"
        android:textSize="16sp"
        android:paddingBottom="16dp" />

    <!-- 主按钮：用 ndjc_action_primary_text（生成器会替换） -->
    <Button
        android:id="@+id/ndjcPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ndjc_action_primary_text" />

    <!-- 下面这两个 0dp 的占位 View 可以保留也可以删除；保留不影响显示 -->
    <View android:id="@+id/textView"
        android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <View android:id="@+id/button"
        android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>

</LinearLayout>
